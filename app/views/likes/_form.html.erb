<%= form_with(model: like, class: "contents") do |form| %>
  <% if like.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(like.errors.count, "error") %>
        prohibited this like from being saved:</h2>

      <ul class="list-disc ml-6">
        <% like.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :identifier %>
    <%=
      form.text_field :identifier,
                      class: [
                        "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                        {
                          "border-gray-400 focus:outline-blue-600": like.errors[:identifier].none?,
                          "border-red-400 focus:outline-red-600": like.errors[:identifier].any?,
                        },
                      ]
    %>
  </div>

  <div class="my-5">
    <%= form.label :song_id %>
    <%=
      form.text_field :song_id,
                      class: [
                        "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                        {
                          "border-gray-400 focus:outline-blue-600": like.errors[:song_id].none?,
                          "border-red-400 focus:outline-red-600": like.errors[:song_id].any?,
                        },
                      ]
    %>
  </div>

  <div class="inline">
    <%=
      form.submit class:
                    "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer"
    %>
  </div>
<% end %>
